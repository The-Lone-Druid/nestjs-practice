# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs.

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = auto
insert_final_newline = true

# Indentation style and size
indent_style = space
indent_size = 2

# Use single quotes in JSON files
[*.json]
quote_type = single

# Match Prettier's trailing comma setting
[*.{js,ts,jsx,tsx}]
trailing_comma = all

# Ensure consistent end of line
[*.{js,ts,jsx,tsx,json}]
end_of_line = auto

# Specific settings for JavaScript and TypeScript files
[*.{js,ts,jsx,tsx}]
charset = utf-8